extends layout

block content

  h1 #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Libros
    
    dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p Este genero no tiene libros

  div(class="icon-return")
      a(href='/catalog/genres' data-toggle="tooltip" data-placement="left" title="Regresar")
        i(class="fas fa-arrow-alt-circle-left mb-5 mt-5" style="font-size:35px;color: #339af0")