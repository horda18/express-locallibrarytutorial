extends layout

block content

  h1 ID: #{bookinstance._id}
  
  p #[strong Titulo:] 
    a(href=bookinstance.book.url) #{bookinstance.book.title}
  p #[strong Edicion:] #{bookinstance.imprint}

  p #[strong Estatus:] 
    if bookinstance.status=='Disponible'
      span.text-success #{bookinstance.status}
    else if bookinstance.status=='Mantenimiento'
      span.text-danger #{bookinstance.status}
    else
      span.text-warning #{bookinstance.status} 
      
  if bookinstance.status!='Disponible'
    p #[strong Disponible para:] #{bookinstance.due_back_formatted}

  div(class="icon-return")
      a(href='/catalog/bookinstances' data-toggle="tooltip" data-placement="left" title="Regresar")
        i(class="fas fa-arrow-alt-circle-left mb-5 mt-5" style="font-size:35px;color: #339af0")