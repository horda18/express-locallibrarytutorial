extends layout

block content
  h1 #{genre.name}
  
  if genre_books.length
  
    p #[strong Borrar todos los libros antes de eliminar este genero.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Libros
    
      dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Esta seguro que desea eliminar el siguiente genero?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=genre._id )

      button.btn.btn-danger(type='submit') Eliminar

  div(class="icon-return")
    a(href='/catalog/genres' data-toggle="tooltip" data-placement="left" title="Regresar" class="btn previous") &laquo; Regresar
