extends layout

block content
  h1(class="mb-4") Eliminar Autor
  h3 #{author.name}
  p= author.lifespan
  
  if author_books.length
  
    p #[strong Borrar todos los libros antes de poder eliminar el autor.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Libros
    
      dl
      each book in author_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Estas seguro que desea eliminar el siguiente Autor?
    
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=author._id )

      button.btn.btn-danger(type='submit') Eliminar
  
  div(class="icon-return")
    a(href='/catalog/authors' data-toggle="tooltip" data-placement="left" title="Regresar" class="btn previous") &laquo; Regresar