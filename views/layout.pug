            a(class="nav-link" href='#' id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Genres
            div(class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink")
              a(class="dropdown-item" href='/catalog/genres') All genres
              a(class="dropdown-item" href='/catalog/genre/create') Create new genre
          li(class="nav-item dropdown")
            a(class="nav-link" href='#' id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Book-instances
            div(class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink")
              a(class="dropdown-item" href='/catalog/bookinstances') All book instances
              a(class="dropdown-item" href='/catalog/bookinstance/create') Create new book instance (copy)
    div(class='container')
      div(class='row')
        div(class='col-sm-12')
