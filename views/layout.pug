            a(class="nav-link" href='#' id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Books
            div(class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink")
              a(class="dropdown-item" href='/catalog/books') All books
              a(class="dropdown-item" href='/catalog/book/create') Create new book
          li(class="nav-item dropdown")
            a(class="nav-link" href='#' id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Authors
