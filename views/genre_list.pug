extends layout

block content
  h1 Lista de Generos
  div(class="container mb-5")
    a(href='/catalog/genre/create' class="btn btn-success mt-4" style="padding:10px") + Nuevo Genero
  
  div(class="container")
    table(class="table mt-5 mb-5 text-center" id="table_id")
      thead
        tr
          th Nombre
          th Acciones

      tbody
        each genre in genre_list
         tr(class="table-hover")
            td #{genre.name}
            td 
              a(href=genre.url+'/update')
                i(class="fas fa-pencil-alt pr-2")
              
              a(href="javascript:void(0);" class="delete-genre" data-id=genre._id)
                i(class="fas fa-trash-alt pr-2")
                          
              a(href=genre.url)
                i(class="fas fa-info pr-2")
        else
          li There are no genres.

  form(action='' method='POST' id="myFormGenre")
    div(class="modal fade" id="DeleteModalGenre" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title" id="myModalLabel") Eliminar
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
          div(class="modal-body")
            strong Estas seguro que desea eliminar este Genero?
          div( class="modal-footer")
            input(type="hidden" name="id" class="form-control genre_id" required='true')
            button(type="button" class="btn btn-default" data-dismiss="modal") Cancelar
            button(type="submit" class="btn btn-danger") Eliminar

